# ğŸ§ª Etapa 1: test
FROM node:20 AS test

WORKDIR /usr/src/app

COPY package*.json ./

RUN npm ci

COPY . .

# Se ejecutan los tests (si fallan, el build se interrumpe)
RUN npm run test


# ğŸ—ï¸ Etapa 2: build de producciÃ³n
FROM node:20 AS build

WORKDIR /usr/src/app

# Copia completa desde la etapa test (incluye node_modules, cÃ³digo, etc.)
COPY --from=test /usr/src/app /usr/src/app

ENV VITE_BACKEND_URL=/api

RUN npm run build


